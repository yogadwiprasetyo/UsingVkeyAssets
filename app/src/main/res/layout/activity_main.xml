<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:scrollbarSize="0dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/gojek_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider_one"
            style="@style/DivideBold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_logo" />

        <TextView
            android:id="@+id/tv_tid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_one" />

        <View
            android:id="@+id/divider_two"
            style="@style/DivideBold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tid" />

        <TextView
            android:id="@+id/tv_title_sdk_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="SDK Version"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_two" />

        <TextView
            android:id="@+id/tv_value_sdk_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical"
            app:layout_constraintTop_toBottomOf="@id/divider_two" />

        <View
            android:id="@+id/divider_light_one"
            style="@style/DivideLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_sdk_version" />

        <TextView
            android:id="@+id/tv_title_firmware_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Firmware Version"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_light_one" />

        <TextView
            android:id="@+id/tv_value_firmware_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical"
            app:layout_constraintTop_toBottomOf="@id/divider_light_one" />

        <View
            android:id="@+id/divider_light_two"
            style="@style/DivideLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_firmware_version" />

        <TextView
            android:id="@+id/tv_title_processor_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="V-OS Processor Version"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_light_two" />

        <TextView
            android:id="@+id/tv_value_processor_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical"
            app:layout_constraintTop_toBottomOf="@id/divider_light_two" />

        <View
            android:id="@+id/divider_light_three"
            style="@style/DivideLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_processor_version" />

        <TextView
            android:id="@+id/tv_title_firmware_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Firmware Return Code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_light_three" />

        <TextView
            android:id="@+id/tv_value_firmware_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical"
            app:layout_constraintTop_toBottomOf="@id/divider_light_three" />

        <View
            android:id="@+id/divider_four"
            style="@style/DivideBold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_firmware_code" />

        <TextView
            android:id="@+id/tv_title_threat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Threat List"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_four" />

        <View
            android:id="@+id/divider_light_six"
            style="@style/DivideLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_threat" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_threats"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_light_six"
            tools:listitem="@layout/item_threats" />

        <TextView
            android:id="@+id/tv_no_threat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="No Threat Found"
            app:layout_constraintBottom_toTopOf="@id/divider_five"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_light_six" />

        <ProgressBar
            android:id="@+id/pb_threats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/divider_five"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_threat" />

        <View
            android:id="@+id/divider_five"
            style="@style/DivideBold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_threats" />

        <TextView
            android:id="@+id/tv_title_cryptota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Secure Keyboard"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_five" />

        <Button
            android:id="@+id/btn_secure_keyboard"
            style="@style/ButtonCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Demo Secure Keyboard"
            app:layout_constraintTop_toBottomOf="@id/tv_title_cryptota" />

        <View
            android:id="@+id/divider_six"
            style="@style/DivideBold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_secure_keyboard" />

        <TextView
            android:id="@+id/tv_title_sfio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Secure File IO"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_six" />

        <Button
            android:id="@+id/btn_block_data"
            style="@style/ButtonCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Encrypting/Decrypting Block of Data"
            app:layout_constraintTop_toBottomOf="@id/tv_title_sfio" />

        <Button
            android:id="@+id/btn_string_file"
            style="@style/ButtonCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encrypting/Decrypting String to/from File"
            app:layout_constraintTop_toBottomOf="@id/btn_block_data" />

        <Button
            android:id="@+id/btn_block_data_file"
            style="@style/ButtonCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encrypting/Decrypting Block Data to/from File"
            app:layout_constraintTop_toBottomOf="@id/btn_string_file" />

        <Button
            android:id="@+id/btn_encrypt_existing_file"
            style="@style/ButtonCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encrypting Existing File"
            app:layout_constraintTop_toBottomOf="@id/btn_block_data_file" />

        <Button
            android:id="@+id/btn_encrypt_file_non_text"
            style="@style/ButtonCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encrypt/Decrypt Existing Non Text File"
            app:layout_constraintTop_toBottomOf="@id/btn_encrypt_existing_file" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.50"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>